@{
    this.ViewData["Title"] = "About Page";
}

<h1>Data generated by ViewBag:</h1>

<h2>Day: @this.ViewBag.Day</h2>
<h2>Month: @this.ViewBag.Month</h2>
<h2>Year: @this.ViewBag.Year</h2>

<h1>Data generated by ViewData:</h1>

<h2>Day: @this.ViewData["Day"]</h2>
<h2>Month: @this.ViewData["Month"]</h2>
<h2>Year: @this.ViewData["Year"]</h2>

<h1>Data generated by Strongly-typed view model:</h1>
<h2>Day: @this.Model.Day</h2>
<h2>Month: @this.Model.Month</h2>
<h2>Year: @this.Model.Year</h2>
@using (this.Html.BeginForm("About", "Home", FormMethod.Get))
{
    <div>
        Year: <input type="number" name="year" class="form-control" />
    </div>
    <div>
        Month: <input type="number" name="month" class="form-control" />
    </div>

    <div>
        Day: <input type="number" name="day" class="form-control" />
    </div>
    <input type="submit" />
}