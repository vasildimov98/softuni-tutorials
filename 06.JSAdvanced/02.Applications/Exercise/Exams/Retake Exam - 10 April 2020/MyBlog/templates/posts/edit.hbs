{{> header}}
<!-- Edit -->
<main id="home-logged">
    <section class="first-section">
        <section class="background-container">
            <form action="/edit/{{post._id}}" method="POST" class="edit-form">
                <h1>Edit Post</h1>
                <label for="title">Title</label>
                <input type="text" name="title" value="{{post.title}}">
                <label for="category">Category</label>
                <input type="text" name="category" value="{{post.category}}">
                <label for="content">Content</label>
                <textarea name="content" cols="30" rows="7">{{post.content}}</textarea>
                <button>Edit</button>
                <a href="/home" id="close-btn"><img src="../../images/close.png"></a>
            </form>
        </section>
    </section>
    <section class="second-section">
        <h3>Posts</h3>
        <hr>
        <div class="posts-row">
            <article class="post">
                <h1>{{post.title}}</h1>
                <h2><span>{{post.category}}</span></h2>
                <p>{{post.content}}</p>
                <a href="/details/{{post._id}}" id="details-button">Details</a>
                <a href="/delete/{{post._id}}" id="delete-button">Delete</a>
                <a href="/edit/{{post._id}}" id="edit-button">Edit</a>
            </article>
        </div>
    </section>
</main>