{{>header}}
<h1>Edit Offer</h1>
<p class="message"></p>
<form>
    <div>
        <input type="text" placeholder="{{shoe.name}}" name="name">
    </div>
    <div>
        <input type="text" placeholder="{{shoe.price}}" name="price">
    </div>
    <div>
        <input type="text" placeholder="{{shoe.imageUrl}}" name="imageUrl">
    </div>
    <div>
        <textarea placeholder="{{shoe.description}}" name="description"></textarea>
    </div>
    <div>
        <input type="text" placeholder="{{shoe.brand}}" name="brand">
    </div>
    <div>
        <button>Edit</button>
    </div>
</form>
{{>footer}}